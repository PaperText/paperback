  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "--host", "0.0.0.0",
        "--port", "7878",
        "--log-level", "debug",
        "--use-colors",
        // "--log-config", "./src/container/uvicorn_log.json",
        "--reload",
        "--reload-dir", "/root/paperback/",
        "paperback.app:app",
      ],
      "jinja": true,
      "justMyCode": true,
      "serverReadyAction":{
        "action": "openExternally",
        // "pattern": "Uvicorn running on (.*) \\(Press CTRL\\+C to quit\\)$",
        "pattern": "Uvicorn running on http:\/\/0\\.0\\.0\\.0:(.*) \\(Press CTRL\\+C to quit\\)$",
        "uriFormat": "http://localhost:%s/spec",
      }
    },
  ]
}
